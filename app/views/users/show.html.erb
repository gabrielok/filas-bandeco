<% provide(:title, "Seu status na fila") %>
<!-- First Photo Grid-->
<div class="w3-row-padding w3-padding-16 w3-center" id="food">
    <img src=<%= path_to(Restaurant.find(id = @user.restaurant).name) %> alt="Erro ao carregar a foto" style="width:36%;height:25%">
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"> <%= message %> </div>
    <% end %>
    <% flash.discard(:success) %>
    
    <p>Mais informações:</p>
    <a href="http://sites.usp.br/sas/todos-os-restaurantes-2/">Saite dos restaurantes</a>
    <br>
</div>